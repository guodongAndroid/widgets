<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <com.guodong.android.widget.edittext.DropSearchEditText
        android:id="@+id/drop_search"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/bg_edt_grey_conner"
        android:textColorHint="#cccccc"
        android:gravity="center_vertical"
        android:textSize="12sp"
        android:hint="请选择"
        android:dropDownSelector="@color/teal_700"
        app:dropDrawableWidth="30dp"
        app:dropDrawableHeight="30dp"
        app:dropDownDrawable="@drawable/pic_drop_blue"
        app:riseUpDrawable="@drawable/pic_rise_blue"
        app:layout_constraintVertical_bias="0.2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>