<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="DropSearchEditText">
        <attr name="dropDrawableWidth" format="dimension"/>
        <attr name="dropDrawableHeight" format="dimension"/>
        <attr name="dropDownDrawable" format="reference"/>
        <attr name="riseUpDrawable" format="reference"/>
        <attr name="expandClickRange" format="boolean"/>
        <attr name="clickOffset" format="dimension"/>
        <attr name="resetBeforeShow" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="MarqueeTextView">
        <attr name="orientation">
            <enum name="horizontal" value="0" />
            <enum name="vertical" value="1" />
        </attr>
    </declare-styleable>

</resources>